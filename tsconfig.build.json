{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "None",
    "moduleResolution": "Node",
    "target": "ES2017",
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitUseStrict": true,
    "downlevelIteration": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["test", "node_modules"]
}
